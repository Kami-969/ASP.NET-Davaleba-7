@model IEnumerable<C.R.E.A.M.Models.Album>

@{
    ViewBag.Title = "Index";
}

<br />
<h2>Index</h2>
<br />
<form action="/StoreManage/Search" method="get">
    <input type="text" name="parameter" placeholder="Title" />
    <input type="submit" placeholder="Search" />

</form>
<br />
@Html.ActionLink("CreatAlbum", "CreatAlbum")
<br />
<br />
<table class="table">
    <tr>
        <th>Title</th>
        <th>Price</th>
        <th>AlbumUrl</th>
        <th>ReleaseYear</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.Price</td>
            <td>@item.AlbumUrl</td>
            <td>@item.ReleaseYear</td>
            <td>@Html.ActionLink("Edit", "Edit", new { id = item.AlbumId })</td>
        </tr>
    }
</table>
